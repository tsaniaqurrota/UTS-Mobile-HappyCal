<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".HomePageActivity">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, Pyca!"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/txt_today_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday, 27 July 2023"
            android:layout_gravity="start"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_box"
            android:padding="16dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current weight :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_current_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 kg"
                android:textSize="20dp"
                android:textColor="@color/white"

                android:layout_marginVertical="10dp"
                android:layout_gravity="start" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_box"
            android:padding="16dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals weight :"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txt_goals_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 kg"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginVertical="10dp"
                android:layout_gravity="start" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title_sisa_cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sisa Kalori"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/txt_sisa_cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 cal"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_marginVertical="5dp"
                android:layout_weight="2">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title_konsum_cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konsumsi Kalori"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/txt_konsumsi_cal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 cal"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_marginVertical="5dp"
                android:layout_weight="2">
            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cal_box"
            android:layout_marginVertical="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/txt_title_cal_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CALORY IN"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/txt_cal_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 cal"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="2"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/txt_title_cal_breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/txt_cal_breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 cal"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/txt_title_cal_lunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/txt_cal_lunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 cal"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/txt_title_cal_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dinner"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/txt_cal_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 cal"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/txt_title_cal_snack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snack"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/txt_cal_snack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 cal"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cal_box"
            android:layout_marginVertical="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/txt_title_cal_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CALORY OUT"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginVertical="5dp"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/txt_cal_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 cal"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="+"
            android:textSize="40sp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="20dp"
            android:background="@drawable/plus_btn"
            />

    </LinearLayout>




</ScrollView>